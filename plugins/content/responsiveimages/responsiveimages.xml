<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" method="upgrade">
	<name>plg_content_responsiveimages</name>
	<author>Joomla! Project</author>
	<creationDate>July 2021</creationDate>
	<copyright>(C) 2021 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>__DEPLOY_VERSION__</version>
	<description>PLG_CONTENT_RESPONSIVEIMAGES_XML_DESCRIPTION</description>
	<files>
		<filename plugin="responsiveimages">responsiveimages.php</filename>
	</files>
	<languages>
		<language tag="en-GB">plg_content_responsiveimages.ini</language>
		<language tag="en-GB">plg_content_responsiveimages.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field
					name="custom_sizes"
					type="radio"
					label="PLG_CONTENT_RESPONSIVEIMAGES_SET_SIZES_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="creation_method"
					type="list"
					label="PLG_CONTENT_RESPONSIVEIMAGES_METHOD_LABEL"
					default="2"
					validate="options"
					showon="custom_sizes:1"
					>
					<option value="2">PLG_CONTENT_RESPONSIVEIMAGES_METHOD_OPTION_RESIZE</option>
					<option value="4">PLG_CONTENT_RESPONSIVEIMAGES_METHOD_OPTION_CROP</option>
					<option value="5">PLG_CONTENT_RESPONSIVEIMAGES_METHOD_OPTION_RESIZE_CROP</option>
				</field>

				<field
					name="custom_size_options"
					type="subform"
					label="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_LABEL"
					description="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_DESC"
					layout="joomla.form.field.subform.repeatable-table"
					icon="list"
					multiple="true"
					showon="custom_sizes:1"
				>
					<form hidden="true" name="list_templates_modal" repeat="true">
						<field
							name="title"
							type="text"
							label="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_TITLE_LABEL"
							hint="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_TITLE_PLACEHOLDER"
						/>

						<field
							name="width"
							type="number"
							label="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_WIDTH_LABEL"
							filter="integer"
							validate="number"
							required="true"
						/>
						
						<field
							name="height"
							type="number"
							label="PLG_CONTENT_RESPONSIVEIMAGES_SIZES_HEIGHT_LABEL"
							filter="integer"
							validate="number"
							required="true"
						/>
					</form>
				</field>

			</fieldset>
		</fields>
	</config>

</extension>
